<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Auto Code Generator - WanderLust</title>
    <link rel="stylesheet" href="/css/style.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css">
    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .generator-container {
            max-width: 900px;
            margin: 2rem auto;
            background: white;
            border-radius: 15px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            overflow: hidden;
        }
        .header-section {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
            padding: 2rem;
            text-align: center;
        }
        .input-section {
            padding: 2rem;
            background: #f8f9fa;
        }
        .code-output {
            background: #2d2d2d;
            color: #f8f8f2;
            padding: 1.5rem;
            border-radius: 8px;
            min-height: 200px;
            font-family: 'Courier New', monospace;
            white-space: pre-wrap;
            overflow-x: auto;
        }
        .word-input {
            font-size: 1.2rem;
            padding: 1rem;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        .word-input:focus {
            border-color: #4facfe;
            box-shadow: 0 0 0 0.2rem rgba(79, 172, 254, 0.25);
        }
        .generate-btn {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            border: none;
            padding: 1rem 2rem;
            font-size: 1.1rem;
            border-radius: 8px;
            color: white;
            transition: transform 0.2s ease;
        }
        .generate-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(79, 172, 254, 0.3);
        }
        .examples-section {
            padding: 1.5rem;
            background: white;
        }
        .example-tag {
            display: inline-block;
            background: #e3f2fd;
            color: #1976d2;
            padding: 0.5rem 1rem;
            margin: 0.25rem;
            border-radius: 20px;
            cursor: pointer;
            transition: all 0.2s ease;
            border: 1px solid #bbdefb;
        }
        .example-tag:hover {
            background: #1976d2;
            color: white;
            transform: scale(1.05);
        }
        .language-badge {
            background: #4caf50;
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 600;
        }
        .copy-btn {
            background: #6c757d;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.2s ease;
        }
        .copy-btn:hover {
            background: #5a6268;
        }
        .copy-btn.copied {
            background: #28a745;
        }
        .loading {
            display: none;
            text-align: center;
            padding: 2rem;
        }
        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #4facfe;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        .error-message {
            background: #f8d7da;
            color: #721c24;
            padding: 1rem;
            border-radius: 8px;
            border: 1px solid #f5c6cb;
            margin-top: 1rem;
            display: none;
        }
    </style>
</head>
<body>
    <div class="generator-container">
        <div class="header-section">
            <h1><i class="fas fa-code"></i> Auto Code Generator</h1>
            <p class="mb-0">Type a single word and instantly generate code snippets</p>
        </div>
        
        <div class="input-section">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="input-group mb-3">
                        <input type="text" 
                               id="wordInput" 
                               class="form-control word-input" 
                               placeholder="Enter a single word (e.g., function, class, div, button...)"
                               maxlength="50">
                        <button class="btn generate-btn" type="button" onclick="generateCode()">
                            <i class="fas fa-magic"></i> Generate Code
                        </button>
                    </div>
                    
                    <div class="error-message" id="errorMessage"></div>
                    
                    <div class="examples-section">
                        <h6><i class="fas fa-lightbulb"></i> Try these examples:</h6>
                        <div class="example-tags">
                            <span class="example-tag" onclick="setWord('function')">function</span>
                            <span class="example-tag" onclick="setWord('class')">class</span>
                            <span class="example-tag" onclick="setWord('array')">array</span>
                            <span class="example-tag" onclick="setWord('loop')">loop</span>
                            <span class="example-tag" onclick="setWord('div')">div</span>
                            <span class="example-tag" onclick="setWord('button')">button</span>
                            <span class="example-tag" onclick="setWord('async')">async</span>
                            <span class="example-tag" onclick="setWord('react')">react</span>
                            <span class="example-tag" onclick="setWord('server')">server</span>
                            <span class="example-tag" onclick="setWord('hello')">hello</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="loading" id="loading">
            <div class="spinner"></div>
            <p class="mt-3">Generating code...</p>
        </div>
        
        <div class="p-3" id="outputSection" style="display: none;">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5><i class="fas fa-terminal"></i> Generated Code</h5>
                <div>
                    <span class="language-badge" id="languageBadge">javascript</span>
                    <button class="copy-btn ms-2" onclick="copyCode()">
                        <i class="fas fa-copy"></i> Copy
                    </button>
                </div>
            </div>
            <div class="code-output" id="codeOutput"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function setWord(word) {
            document.getElementById('wordInput').value = word;
            generateCode();
        }

        async function generateCode() {
            const input = document.getElementById('wordInput').value.trim();
            const errorDiv = document.getElementById('errorMessage');
            const loadingDiv = document.getElementById('loading');
            const outputSection = document.getElementById('outputSection');
            const codeOutput = document.getElementById('codeOutput');
            const languageBadge = document.getElementById('languageBadge');
            
            // Hide previous results and errors
            errorDiv.style.display = 'none';
            outputSection.style.display = 'none';
            
            // Validation
            if (!input) {
                showError('Please enter a word');
                return;
            }
            
            if (input.includes(' ')) {
                showError('Please enter a single word only (no spaces)');
                return;
            }
            
            // Show loading
            loadingDiv.style.display = 'block';
            
            try {
                const response = await fetch('/generate-code', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ input: input })
                });
                
                const data = await response.json();
                
                loadingDiv.style.display = 'none';
                
                if (data.success) {
                    codeOutput.textContent = data.code;
                    languageBadge.textContent = data.language;
                    outputSection.style.display = 'block';
                } else {
                    showError(data.error || 'Failed to generate code');
                }
            } catch (error) {
                loadingDiv.style.display = 'none';
                showError('Network error. Please try again.');
                console.error('Error:', error);
            }
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
        }

        function copyCode() {
            const codeOutput = document.getElementById('codeOutput');
            const copyBtn = event.target.closest('.copy-btn');
            
            navigator.clipboard.writeText(codeOutput.textContent).then(() => {
                copyBtn.classList.add('copied');
                copyBtn.innerHTML = '<i class="fas fa-check"></i> Copied!';
                
                setTimeout(() => {
                    copyBtn.classList.remove('copied');
                    copyBtn.innerHTML = '<i class="fas fa-copy"></i> Copy';
                }, 2000);
            }).catch(err => {
                console.error('Failed to copy:', err);
            });
        }

        // Allow Enter key to generate code
        document.getElementById('wordInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                generateCode();
            }
        });

        // Auto-generate on input if it's a single word
        document.getElementById('wordInput').addEventListener('input', function(e) {
            const value = e.target.value.trim();
            if (value && !value.includes(' ') && value.length > 2) {
                // Debounce the auto-generation
                clearTimeout(window.autoGenerateTimeout);
                window.autoGenerateTimeout = setTimeout(() => {
                    generateCode();
                }, 500);
            }
        });
    </script>
</body>
</html>
