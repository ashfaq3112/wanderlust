<% layout("/layouts/boilerplate") %>
    <h3>Edit your Listing</h3>
    <div class="row mt-3">
        <div class="col-8 offset-2"></div>
    </div>
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label> 
            <input name="listing[title]" id="title" value="<%=listing.title%>" type="text" class="form-control" required>
            <div class="invalid-feedback" id="title-error-empty">Please provide a title</div>
            <div class="invalid-feedback" id="title-error-numbers" style="display:none;">Please provide a valid title (cannot be only numbers)</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label> 
            <textarea name="listing[description]" id="description" class="form-control" required><%=listing.description%></textarea>
            <div class="invalid-feedback" id="description-error-empty">Please provide a description</div>
            <div class="invalid-feedback" id="description-error-numbers" style="display:none;">Please provide a valid description (cannot be only numbers)</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input name="listing[image]" id="image" type="file" class="form-control" accept="image/*">
            <small class="text-muted">Leave empty to keep current image</small>
            <% if(listing.image && listing.image.url) { %>
                <div class="mt-2">
                    <small class="text-muted">Current image:</small><br>
                    <img src="<%= listing.image.url %>" alt="Current image" style="max-width: 200px; max-height: 150px; object-fit: cover;" class="border rounded">
                </div>
            <% } %>
        </div>
        <div class="row">
            <div class="mb-3 col-4">
                <label for="price" class="form-label">Price</label> 
                <input name="listing[price]" id="price" value="<%=listing.price%>" type="number" class="form-control" min="0" step="0.01" required>
                <div class="invalid-feedback">Please provide a valid price (cannot be negative)</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label> 
                <input name="listing[country]" id="country" value="<%=listing.country%>" type="text" class="form-control" required>
                <div class="invalid-feedback" id="country-error-empty">Please provide a country</div>
                <div class="invalid-feedback" id="country-error-numbers" style="display:none;">Please provide a valid country (cannot be only numbers)</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label> 
            <input name="listing[location]" id="location" value="<%=listing.location%>" type="text" class="form-control" required>
            <div class="invalid-feedback" id="location-error-empty">Please provide a location</div>
            <div class="invalid-feedback" id="location-error-numbers" style="display:none;">Please provide a valid location (cannot be only numbers)</div>
        </div>
        <button type="submit" class="btn btn-dark edit-btn">Edit</button>
    </form>
</body>
</html>